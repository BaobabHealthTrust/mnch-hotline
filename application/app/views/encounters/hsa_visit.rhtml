<script type="text/javascript" language="javascript">
	<% if session[:house_keeping_mode] %>
			<%
			if session[:report_task].to_s.upcase == "anc_visit".upcase
			 		task = "anc"
			 else
			 		task = session[:report_task].to_s
			 end
			%>
			var tt_cancel_show = "/clinic/district?task=<%=task%>&district=<%=session[:district]%>";
			var tt_cancel_destination = "/clinic/district?task=<%=task%>&district=<%=session[:district]%>";
	<% else %>
		var tt_cancel_show = "/patients/show/<%= @patient.id %>";
		var tt_cancel_destination = "/patients/show/<%= @patient.id %>";		
	<% end %>		
</script>
<style>
 
</style>

<% form_tag :controller => "encounters", :action => "create" do |f| %>
	<%= hidden_field_tag "encounter[encounter_type_name]", "HSA VISIT" %>
	<%= hidden_field_tag "encounter[patient_id]", @patient.id %>
	<%= hidden_field_tag "encounter[encounter_datetime]", DateTime.now() %>
	<%= hidden_field_tag "encounter[provider_id]", params[:hsa_id] %>
	<%= hidden_field_tag "hsa_id", params[:hsa_id] %>
	<%session_date = session[:datetime] || Time.now() %>
	
  <%= touch_select_tag "HSA VISIT", @patient, options_for_select([' ', 'Yes', 'No']),
		{:id => "hsa_visit",
		 :helptext => "Visited #{@patient.person.names.first.given_name} " + "(#{@patient.person.names.first.family_name_prefix}) " + "#{@patient.person.names.first.family_name} " +  "in last two weeks?" } %>
  

   <%= touch_select_tag "REASON FOR NOT VISITING ANC CLIENT", @patient, options_for_select(@select_options['reason_for_not_visiting_anc_client']),
		{	:id => "reason_for_not_visiting_anc_client",
		    :condition => "$('hsa_visit').value == 'No'",
		 	:helpText => "Why not visited client?",
		 	:multiple => false} %>
		 		 	  
  <%unless @encounter_id.nil?%>
    <%= hidden_field_tag("encounter_id",  @encounter_id) %>
    <%= hidden_field_tag("editing",       true) %>
  <%end%>
  
	<%= submit_tag 'Finish' %>
<% end %>
