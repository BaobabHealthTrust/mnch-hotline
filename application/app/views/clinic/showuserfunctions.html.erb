<!--<div id="tab" style="height: 461px;">-->
<body style="background-color: #ffffff">
      <!--div style=""-->
      <div id="buttons" style="height: 304px;margin-top: 200px;margin-left: 20px;">
        <h2>Select administrative task</h2>
        <base target="_parent">
            <button style="margin: 5px 0px 0px; min-width: 250px;"
                    onMouseDown="window.parent.location= '/user/change_password/<%=User.current_user.id%>'"
                    target="_parent "class="blue"><span>Change Password</span></button><br/>

            <button style="margin: 5px 0px 0px; min-width: 250px;"
                    onMouseDown="window.parent.location = '/user/edit/<%=User.current_user.id%>'"
                    target="_parent" class="blue"><span>Edit Name</span></button><br/>

            <% if User.current_user.admin? %>
              <button style="margin: 5px 0px 0px; min-width: 250px;"
                      onMouseDown="window.parent.location= '/user/new'"
                      target="_parent "class="blue"><span>Create User</span></button><br/>
                      
              <button style="margin: 5px 0px 0px; min-width: 250px;"
                      onMouseDown="window.parent.location = '/user/select_user'"
                      target="_parent" class="blue"><span>Edit User</span></button><br/>
            <%end%>
