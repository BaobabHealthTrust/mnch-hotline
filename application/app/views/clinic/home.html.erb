<script language="javascript">
  tt_cancel_destination = "/clinic/irrelevantcall";
  tt_cancel_show = "/people/search";
  tstSuppressBarcode = true;
</script>

<div id="home">
  <div id="project_name"><span style="font-size: 0.4em;">Hotline</span></div>
  <div id="facility"><%= Location.current_health_center.name %></div>
  <div id="location"><%= Location.current_location.name %></div>
  <div id="date"><%=system_date%></div>

  <div id="user"><%= User.current_user.username %></div>
  <select id="tabs">
    <option value='/clinic/overview' target="_parent">Overview</option>
  </select>

  <select id="links">
    <% if session[:house_keeping_mode] == false  %>
      <option value="" ttSize="190px">Cancel Call</option>
    <%else%>
      <option value="/clinic/end_housekeeping_mode" ttSize="190px">Cancel</option>
    <%end%>
    <option value="" ttSize="190px">Find by Name</option>
    <option value="/people/find_by_national_id" ttSize="190px">Find by ID</option>
    <% if session[:task] == false %>
      <option value="/clinic/emergencycall" ttSize="200px">Emergency Call</option>
    <%end%>
    <option value="/people/find_by_phone" ttSize="200px">Find by phone</option>
    <% if ! session[:house_keeping_mode] == false  %>
        <option value="/clinic/new_call?task=followup" ttSize="130px">Follow up</option>
    <%end%>
  </select>
</div>