  <tr>
    <td>
      <%= link_to "Group V/Head:", "/patients/edit_demographics?field=group_village_head&id=#{@patient.patient_id}" -%>
    </td>
    <td class="label"><%= @patient.person.addresses.first.subregion %></td>
    <td>
      <%= link_to "Mothers Surname:", "/patients/edit_demographics?field=mothers_name&id=#{@patient.patient_id}" -%>
